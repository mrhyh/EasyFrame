- (void)dealloc{
    [SVProgressHUD dismiss];
    if (self.viewModel) {
        [self.viewModel cancelAndClearAll];
        self.viewModel = nil;
    }
    [[NSNotificationCenter defaultCenter] removeObserver:self];
}
